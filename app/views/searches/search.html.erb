<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>
<% if @error %>
  <p><%= @error %></p>
<% elsif @venues %>
  <ul class="venues">
    <%= @venues.each do |venue| %>
      <li class="venue">
        <p>Venue: <%= venue['name'] %></p> 
        <p>Phone: <%= venue['contact']['formattedPhone'] %></p> 
        <p>Location: <%= venue['location']['address'] %></p> 
        <p>Checkins: <%= venue['stats']['checkinsCount'] %></p> <br>
      </li>
    <% end %>
  </ul>
<% end %>