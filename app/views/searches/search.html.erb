<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>
<div>
  <div>
    <% if @error %>
      <p><%= @error %></p>
    <% elsif @venues %>
    <ul>
    <% @venues.each do |venue| %>
      <li>
        <%= venue["name"] %><br>
         <% if venue["location"]["address"] != "" %>
         <%= venue["location"]["address"] %>
         <% end %>
        Checkins: <%= venue["stats"]["checkinsCount"] %>
      </li>
      <br><br>
    <% end %>
    <br>
    </ul>
  <% end %>
</div>
</div>
