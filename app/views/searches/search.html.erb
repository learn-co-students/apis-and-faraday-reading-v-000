<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>

<% if @error %>
   <p><%= @error %></p>
 <% elsif @venues %>
  <ul>
  <% @venues.each do |v| %>
    <li><%= v["name"]%></li>
    <ul>
      <% if !!v["location"]["address"] && !!v["location"]["city"]%>
      <li><%= v["location"]["address"]%>, <%= v["location"]["city"]%>, <%= v["location"]["state"]%></li>
      <%elsif !!v["location"]["city"]%>
      <li><%= v["location"]["city"]%>, <%= v["location"]["state"]%></li>
      <%else%>
      <li><%= v["location"]["state"]%></li>
      <%end%>
    </ul>
  <%end%>
  </ul>
<%end%>
