<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @venues %>
    <ul>
      <% @venues.each do |venue| %>
        <li>
          <p><%= venue['name'] %></p>
          <p><%= venue['location']['address'] %></p>
          <p>Checkins: <%= venue['stats']['checkinsCount'] %></p>
        </li>
        <br><br>
      <% end %>
    </ul>
  <% end %>
</div>
