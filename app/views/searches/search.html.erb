<h1>Search for Coffee Shops Near Me</h1>

<%= form_tag '/search' do %>
	<p>Enter
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %></p>

	<p>Enter 
	<%= label_tag :radius %>
  <%= number_field_tag :radius %></p>

	<p>Enter 
	<%= label_tag :query %>
  <%= text_field_tag :query %></p>

	<%= submit_tag "Search!" %>
<% end %>


<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @venues %>
    <ul>
    <% @venues.each do |venue| %>
      <li>
        <%= venue["name"] %><br>
        <%= venue["location"]["address"] %><br>
        <%= venue["location"]["city"] %>, <%= venue["location"]["state"] %> <%= venue["location"]["postalCode"] %><br> Contact: <%= venue["contact"]["formattedPhone"] %><br>
        Checkins: <%= venue["stats"]["checkinsCount"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
 