<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>
<div>
  <% if @error %>
  <p><%= @error %></p>

  <% elsif @venues %>
  <br>
  Total number of coffee shops near you :<%= @venues.count%>
  <br>
  <ol type='1'>
    <% @venues.each do |venue| %>
    <li>
      <br>

      <%= venue["name"] %><br>
      <%= venue["location"]["address"]%>
      <br>
      Checkins:<%=venue["stats"]["CheckinsCount"]%><br>
      -----------------------------------------------------
    </li>
    <% end %>
  </ol>
  <% end %>

</div>
