<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>

<div>
  <% if @venues %>
    <ul>
      <% @venues.each do |ven| %>
        <li>
          <%# ven %>
          <%= ven["name"] %><br>
          <%= ven["location"]["address"] %>, <%= ven["location"]["city"] %><br>
          Checkins: <%= ven["stats"]["checkinsCount"]%>
        </li>
      <% end %>
    </ul>
  <% elsif @error %>
    <p><%= @error %></p>
  <% end %>
</div>