<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>
<div>
  <% @resp.body if @resp %>
</div>

<div>
  <% if @error %>
    <p class="errors"><%= @error %></p>
  <% elsif @venues %>
    <ul>
    <% @venues.each do |venue| %>
      <li>
        <%= venue["name"] %>
        <%= venue["location"]["address"] %>
        <strong>Checkins: <%= venue["stats"]["checkinsCount"]%></strong>  
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
