<h1>Search for Coffee Shops Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
  <div>
	  <% if @error %>
  	  <p><%= @error %></p>
	  <% elsif @venues %>
	    <ul>
	    <% @venues.each do |venue| %>
	      <li>
	        <%= venue["name"] %><br>
	        <%= venue["location"]["address"] %>
	        |  Checkins: <%= venue["stats"]["checkinsCount"] %>
	      </li><br>
	      <% end %>
	      </ul>
	  <% end %>
  </div>
<% end %>
